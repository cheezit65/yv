<% if params[:horse] %>
	<% @horse = Horse.find(params[:horse])%>
<% if current_user.farm.to_i == @horse.farm.to_i %>
<div style="height: 900px; margin: 0 auto; text-align: center; font-size: 25px;">
	<%= button_to 'See Horse on YearlingVideos.com', horse_path(@horse),  {:style=>'color:white !important;font-size: 14px;line-height: .7em;text-decoration:none', :method => :get}  %><br>
	<h1 style="text-align:center;font-size:1.0em !important;">You Are Editing
	<br>
<div>	
